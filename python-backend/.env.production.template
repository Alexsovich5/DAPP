# ========================================
# DINNER FIRST - PRODUCTION ENVIRONMENT
# Soul Before Skin Dating Platform
# ========================================

# Environment Configuration
ENVIRONMENT=production

# Database Configuration - Use strong credentials
DATABASE_URL=postgresql://dinner_user:STRONG_PASSWORD_HERE@your-db-host:5432/dinner_first_prod

# Security Configuration - CRITICAL: Generate secure keys
SECRET_KEY=GENERATE_STRONG_SECRET_KEY_32_CHARS_MIN
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# Password Security
BCRYPT_ROUNDS=12

# CORS Configuration - Production Domains Only
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com,https://app.yourdomain.com

# Soul Before Skin Configuration
COMPATIBILITY_THRESHOLD=60  # Higher threshold for production
REVELATION_CYCLE_DAYS=7
EMOTIONAL_DEPTH_WEIGHT=0.3
MIN_COMPATIBILITY_SCORE=40  # Higher minimum for better matches
MAX_INTERESTS_PER_USER=10
MAX_BIO_LENGTH=500

# File Upload Configuration
MAX_FILE_SIZE_MB=5
MAX_IMAGE_WIDTH=1920 
MAX_IMAGE_HEIGHT=1080
ALLOWED_FILE_TYPES=jpg,jpeg,png,webp

# AWS S3 Configuration - Production Bucket
AWS_ACCESS_KEY_ID=YOUR_PRODUCTION_AWS_KEY
AWS_SECRET_ACCESS_KEY=YOUR_PRODUCTION_AWS_SECRET
S3_BUCKET_NAME=dinner-first-prod-uploads
S3_REGION=us-east-1

# API Rate Limiting - Stricter in production
API_RATE_LIMIT_PER_MINUTE=30  # Reduced for production
API_BURST_LIMIT=5  # Lower burst limit

# Email Configuration - Production SMTP
SMTP_HOST=smtp.yourmailservice.com
SMTP_PORT=587
SMTP_USERNAME=noreply@yourdomain.com
SMTP_PASSWORD=YOUR_EMAIL_APP_PASSWORD

# Logging Configuration - Production Logging
LOG_LEVEL=WARNING  # Less verbose for production
LOG_FORMAT=json
LOG_FILE_PATH=/var/log/dinner-first/api.log

# Feature Flags - Production Settings
ENABLE_PHOTO_VERIFICATION=true
ENABLE_VIDEO_CALLS=false
ENABLE_LOCATION_MATCHING=true
ENABLE_AI_RECOMMENDATIONS=false  # Enable when ready

# Performance Configuration - Production Tuned
DATABASE_POOL_SIZE=10  # Higher for production load
DATABASE_MAX_OVERFLOW=20
DATABASE_POOL_TIMEOUT=30
API_TIMEOUT_SECONDS=30

# Production Settings - Security Focused
DEBUG=false  # NEVER true in production
ENABLE_SQL_LOGGING=false
ENABLE_PROFILING=false

# Security Headers Configuration - Maximum Security
ENABLE_SECURITY_HEADERS=true
ENABLE_HSTS=true  # HTTPS required
HSTS_MAX_AGE=31536000  # 1 year
CSP_REPORT_URI=https://yourdomain.com/api/csp-report

# Monitoring & Analytics
ENABLE_METRICS=true
METRICS_PORT=8080
HEALTH_CHECK_TOKEN=GENERATE_HEALTH_CHECK_TOKEN

# Redis Configuration (if using for sessions/cache)
REDIS_URL=redis://redis-host:6379/0

# Backup Configuration
BACKUP_S3_BUCKET=dinner-first-backups
BACKUP_SCHEDULE=daily
BACKUP_RETENTION_DAYS=30

# SSL/TLS Configuration
SSL_CERT_PATH=/etc/ssl/certs/dinner-first.crt
SSL_KEY_PATH=/etc/ssl/private/dinner-first.key

# Content Delivery Network
CDN_BASE_URL=https://cdn.yourdomain.com
STATIC_FILES_CDN=true

# Security Contact
SECURITY_CONTACT=security@yourdomain.com

# ========================================
# PRODUCTION DEPLOYMENT CHECKLIST:
# ========================================
# 
# 1. Generate secure SECRET_KEY (openssl rand -hex 32)
# 2. Set strong database credentials  
# 3. Configure production domain in CORS_ORIGINS
# 4. Set up SSL/TLS certificates
# 5. Configure production email service
# 6. Set up monitoring and logging
# 7. Test all security headers
# 8. Run security scan
# 9. Configure backups
# 10. Set up monitoring alerts
# 
# ========================================
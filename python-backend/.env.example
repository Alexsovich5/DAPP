# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/dinner1

# Security Configuration
SECRET_KEY=your_super_secure_secret_key_here_min_32_characters
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# Password Security
BCRYPT_ROUNDS=12

# CORS Configuration
CORS_ORIGINS=http://localhost:5001,http://localhost:4200

# Soul Before Skin Configuration
COMPATIBILITY_THRESHOLD=50
REVELATION_CYCLE_DAYS=7
EMOTIONAL_DEPTH_WEIGHT=0.3
MIN_COMPATIBILITY_SCORE=30
MAX_INTERESTS_PER_USER=10
MAX_BIO_LENGTH=500

# File Upload Configuration
MAX_FILE_SIZE_MB=5
MAX_IMAGE_WIDTH=1920
MAX_IMAGE_HEIGHT=1080
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,webp

# AWS S3 Configuration (Optional)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
S3_BUCKET_NAME=dinner1-uploads
S3_REGION=us-east-1

# API Rate Limiting
API_RATE_LIMIT_PER_MINUTE=60
API_BURST_LIMIT=10

# Email Configuration (Future)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE_PATH=logs/dinner1.log

# Feature Flags
ENABLE_PHOTO_VERIFICATION=true
ENABLE_VIDEO_CALLS=false
ENABLE_LOCATION_MATCHING=true
ENABLE_AI_RECOMMENDATIONS=false

# Performance Configuration
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10
DATABASE_POOL_TIMEOUT=30
API_TIMEOUT_SECONDS=30

# Development Settings
DEBUG=false
ENABLE_SQL_LOGGING=false
ENABLE_PROFILING=false
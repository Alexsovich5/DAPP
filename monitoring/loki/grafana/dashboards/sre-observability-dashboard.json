{
  "dashboard": {
    "id": null,
    "title": "Dinner First - SRE Observability Dashboard",
    "description": "Comprehensive SRE dashboard combining metrics, logs, and traces for Dinner First dating platform",
    "tags": ["dinner_first", "sre", "observability", "loki", "prometheus"],
    "style": "dark",
    "timezone": "browser",
    "editable": true,
    "graphTooltip": 1,
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": ["5s", "10s", "30s", "1m", "5m", "15m", "30m", "1h"],
      "time_options": ["5m", "15m", "1h", "6h", "12h", "24h", "2d", "7d", "30d"]
    },
    "refresh": "30s",
    "panels": [
      {
        "id": 1,
        "title": "System Health Overview",
        "type": "stat",
        "targets": [
          {
            "expr": "up{job=~\"dinner_first-.*\"}",
            "legendFormat": "{{service}}",
            "refId": "A",
            "datasource": {"uid": "prometheus-uid"}
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
        "options": {
          "colorMode": "background",
          "graphMode": "area",
          "justifyMode": "center"
        },
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "thresholds": {
              "steps": [
                {"color": "red", "value": 0},
                {"color": "green", "value": 1}
              ]
            }
          }
        }
      },
      {
        "id": 2,
        "title": "Request Rate & Response Time",
        "type": "timeseries",
        "targets": [
          {
            "expr": "rate(dinner_first_requests_total[5m])",
            "legendFormat": "Requests/sec",
            "refId": "A",
            "datasource": {"uid": "prometheus-uid"}
          },
          {
            "expr": "histogram_quantile(0.95, rate(dinner_first_request_duration_seconds_bucket[5m]))",
            "legendFormat": "95th percentile response time",
            "refId": "B",
            "datasource": {"uid": "prometheus-uid"}
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0},
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "color": {"mode": "palette-classic"}
          }
        }
      },
      {
        "id": 3,
        "title": "Error Rate",
        "type": "stat",
        "targets": [
          {
            "expr": "rate(dinner_first_requests_total{status=~\"5..\"}[5m]) / rate(dinner_first_requests_total[5m]) * 100",
            "legendFormat": "Error Rate %",
            "refId": "A",
            "datasource": {"uid": "prometheus-uid"}
          }
        ],
        "gridPos": {"h": 6, "w": 6, "x": 0, "y": 8},
        "options": {
          "colorMode": "background",
          "graphMode": "area"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "color": {"mode": "thresholds"},
            "thresholds": {
              "steps": [
                {"color": "green", "value": 0},
                {"color": "yellow", "value": 1},
                {"color": "red", "value": 5}
              ]
            }
          }
        }
      },
      {
        "id": 4,
        "title": "Active Users",
        "type": "stat",
        "targets": [
          {
            "expr": "dinner_first_active_users",
            "legendFormat": "Active Users",
            "refId": "A",
            "datasource": {"uid": "prometheus-uid"}
          }
        ],
        "gridPos": {"h": 6, "w": 6, "x": 6, "y": 8},
        "options": {
          "colorMode": "value",
          "graphMode": "area"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "color": {"mode": "continuous-GrYlRd"}
          }
        }
      },
      {
        "id": 5,
        "title": "Database Performance",
        "type": "timeseries",
        "targets": [
          {
            "expr": "rate(postgres_stat_database_xact_commit_total[5m])",
            "legendFormat": "Transactions/sec",
            "refId": "A",
            "datasource": {"uid": "prometheus-uid"}
          },
          {
            "expr": "postgres_stat_database_numbackends",
            "legendFormat": "Active Connections",
            "refId": "B",
            "datasource": {"uid": "prometheus-uid"}
          }
        ],
        "gridPos": {"h": 6, "w": 12, "x": 12, "y": 8},
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "color": {"mode": "palette-classic"}
          }
        }
      },
      {
        "id": 6,
        "title": "Recent Application Logs",
        "type": "logs",
        "targets": [
          {
            "expr": "{job=~\"dinner_first-.*\",level!=\"debug\"} | json | line_format \"{{.timestamp}} [{{.level}}] {{.message}}\"",
            "refId": "A",
            "datasource": {"uid": "loki-uid"}
          }
        ],
        "gridPos": {"h": 12, "w": 24, "x": 0, "y": 14},
        "options": {
          "showTime": true,
          "showLabels": true,
          "showCommonLabels": false,
          "wrapLogMessage": false,
          "prettifyLogMessage": false,
          "enableLogDetails": true,
          "sortOrder": "Descending"
        }
      },
      {
        "id": 7,
        "title": "Soul Connection Metrics",
        "type": "timeseries",
        "targets": [
          {
            "expr": "rate(dinner_first_matches_created_total[5m])",
            "legendFormat": "Matches Created/sec",
            "refId": "A",
            "datasource": {"uid": "prometheus-uid"}
          },
          {
            "expr": "dinner_first_match_success_rate",
            "legendFormat": "Match Success Rate %",
            "refId": "B",
            "datasource": {"uid": "prometheus-uid"}
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 26},
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "color": {"mode": "palette-classic"}
          }
        }
      },
      {
        "id": 8,
        "title": "Error Logs by Service",
        "type": "logs",
        "targets": [
          {
            "expr": "{job=~\"dinner_first-.*\",level=~\"error|fatal\"} | json",
            "refId": "A",
            "datasource": {"uid": "loki-uid"}
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 26},
        "options": {
          "showTime": true,
          "showLabels": true,
          "sortOrder": "Descending"
        }
      },
      {
        "id": 9,
        "title": "Resource Utilization",
        "type": "timeseries",
        "targets": [
          {
            "expr": "rate(node_cpu_seconds_total{mode!=\"idle\"}[5m]) * 100",
            "legendFormat": "CPU Usage %",
            "refId": "A",
            "datasource": {"uid": "prometheus-uid"}
          },
          {
            "expr": "(1 - (node_memory_MemAvailable_bytes / node_memory_MemTotal_bytes)) * 100",
            "legendFormat": "Memory Usage %",
            "refId": "B",
            "datasource": {"uid": "prometheus-uid"}
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 34},
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "color": {"mode": "palette-classic"},
            "max": 100,
            "min": 0
          }
        }
      },
      {
        "id": 10,
        "title": "Request Logs by Endpoint",
        "type": "logs",
        "targets": [
          {
            "expr": "{job=\"dinner_first-backend\"} | json | endpoint != \"\" | line_format \"{{.method}} {{.endpoint}} {{.status_code}} {{.response_time}}ms\"",
            "refId": "A",
            "datasource": {"uid": "loki-uid"}
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 34},
        "options": {
          "showTime": true,
          "showLabels": false,
          "sortOrder": "Descending"
        }
      }
    ],
    "templating": {
      "list": [
        {
          "name": "service",
          "type": "query",
          "query": "label_values(up, job)",
          "datasource": {"uid": "prometheus-uid"},
          "refresh": 1,
          "includeAll": true,
          "allValue": ".*",
          "multi": true
        },
        {
          "name": "level",
          "type": "custom",
          "query": "debug,info,warn,error,fatal",
          "includeAll": true,
          "allValue": ".*",
          "multi": true
        }
      ]
    },
    "annotations": {
      "list": [
        {
          "name": "Deployments",
          "datasource": {"uid": "loki-uid"},
          "expr": "{job=\"deployment\"} | json | deployment_event=\"true\"",
          "titleFormat": "Deployment: {{version}}",
          "textFormat": "{{service}} deployed version {{version}}",
          "iconColor": "blue",
          "enable": true
        }
      ]
    }
  }
}